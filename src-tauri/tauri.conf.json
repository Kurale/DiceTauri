{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DiceWidget",
  "version": "0.1.0",
  "identifier": "com.nikola.dicewidget",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",  
        "title": "Dice Widget",
        "width": 200,
        "height": 200,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "hiddenTitle": true,  
        "shadow": false,      
        "acceptFirstMouse": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}